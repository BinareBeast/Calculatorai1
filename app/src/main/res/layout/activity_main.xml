<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="220dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="150dp"
                android:gravity="right"
                android:text="378978933234"
                android:textSize="30dp"
                android:id="@+id/calculationtext"/>
        </LinearLayout>

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="220dp"
        android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:gravity="center">

                <Button
                    android:layout_width="150dp"
                    android:layout_height="70dp"
                    android:layout_margin="10dp"
                    android:id="@+id/cleartxt"
                    android:text="clear"
                    android:textSize="22.5dp"
                    />
                <Button
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_margin="10dp"
                    android:id="@+id/percentage"
                    android:text="%"
                    android:textStyle="bold"
                    android:textSize="23dp"
                    />
                <Button
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_margin="10dp"
                    android:id="@+id/divide"
                    android:text="/"
                    android:textSize="23dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:gravity="center">
                <Button
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_margin="10dp"
                    android:id="@+id/seven"
                    android:text="7"
                    android:textStyle="bold"
                    android:textSize="23dp"
                    />
                <Button
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_margin="10dp"
                    android:id="@+id/eight"
                    android:text="8"
                    android:textStyle="bold"
                    android:textSize="23dp"
                    />
                <Button
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_margin="10dp"
                    android:id="@+id/nine"
                    android:text="9"
                    android:textStyle="bold"
                    android:textSize="23dp"
                    />
                <Button
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_margin="10dp"
                    android:id="@+id/multiply"
                    android:text="X"
                    android:textSize="23dp"
                    android:textStyle="bold"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:gravity="center">

                <Button
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_margin="10dp"
                    android:id="@+id/four"
                    android:text="4"
                    android:textStyle="bold"
                    android:textSize="23dp"
                    />
                <Button
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_margin="10dp"
                    android:id="@+id/five"
                    android:text="5"
                    android:textStyle="bold"
                    android:textSize="23dp"
                    />
                <Button
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_margin="10dp"
                    android:id="@+id/six"
                    android:text="6"
                    android:textStyle="bold"
                    android:textSize="23dp"
                    />
                <Button
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_margin="10dp"
                    android:id="@+id/subtract"
                    android:text="-"
                    android:textSize="30dp"
                    android:textStyle="bold"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:gravity="center">

                <Button
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_margin="10dp"
                    android:id="@+id/one"
                    android:text="1"
                    android:textStyle="bold"
                    android:textSize="23dp"
                    />
                <Button
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_margin="10dp"
                    android:id="@+id/two"
                    android:text="2"
                    android:textStyle="bold"
                    android:textSize="23dp"
                    />
                <Button
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_margin="10dp"
                    android:id="@+id/three"
                    android:text="3"
                    android:textStyle="bold"
                    android:textSize="23dp"
                    />
                <Button
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_margin="10dp"
                    android:id="@+id/add"
                    android:text="+"
                    android:textStyle="bold"
                    android:textSize="23dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:gravity="center">

                <Button
                    android:layout_width="140dp"
                    android:layout_height="70dp"
                    android:layout_margin="10dp"
                    android:id="@+id/zero"
                    android:text="0"
                    android:textSize="22.5dp"
                    />
                <Button
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_margin="10dp"
                    android:id="@+id/dot"
                    android:text="."
                    android:textStyle="bold"
                    android:textSize="23dp"
                    />
                <Button
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_margin="10dp"
                    android:id="@+id/equal"
                    android:text="="
                    android:textStyle="bold"
                    android:textSize="23dp"
                    />
            </LinearLayout>
    </LinearLayout>
</RelativeLayout>